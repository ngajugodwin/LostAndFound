<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="-360dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/background_add_button"
        android:src="@drawable/ic_baseline_person_2_24"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="94dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="212dp"
        android:layout_height="23dp"
        android:layout_marginStart="143dp"
        android:text="TextView"
        android:textSize="20dp"
        android:fontFamily="@font/ubuntu_regular"
        android:layout_marginTop="110dp"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="106dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="213dp"
        android:layout_height="25dp"
        android:layout_marginStart="143dp"
        android:text="TextView"
        android:fontFamily="@font/ubuntu_regular"
        android:layout_marginTop="140dp"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="143dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="213dp"
        android:layout_height="25dp"
        android:layout_marginStart="143dp"
        android:text="TextView"
        android:fontFamily="@font/ubuntu_regular"
        android:layout_marginTop="172dp"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="143dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/notification_text"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginStart="37dp"
        android:text="Turn on to get email notification once a user comments on your item"
        android:fontFamily="@font/ubuntu_regular"
        android:layout_marginTop="230dp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="231dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Switch
        android:id="@+id/switchAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:layout_marginTop="230dp"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="227dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/signOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_logout_24"
        android:text="SIGN OUT"
        android:fontFamily="@font/ubuntu_regular"
        android:layout_marginStart="37dp"
        android:layout_marginTop="300dp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="294dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ProgressBar
        android:id="@+id/actionLoader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginStart="10dp"
        android:visibility="gone"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/imageView"/>
</androidx.constraintlayout.widget.ConstraintLayout>